doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Edit Priorities
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Edit Priorities
    .row
      form#priority
        fieldset
          legend Create Priority
          .small-4.columns
            label(for='name') Name
            input(placeholder='Name', name='name', autofocus)#name
          .small-4.columns
            label(for='value') Value
            input(placeholder='Value', name='value')#value
          .small-4.columns
            button#savePriority.small Save
    .row
      table#priorityTable
        thead
          th Name
          th Value
          th
          th
        tbody
    .row
      a(href='index.html') See To-Dos

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/priorities.js')

