doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body(style='background-image:url("'+album.cover+'")')
    .row
      .small-6.columns
        h1= title
      .small-5.columns
        h1= moment(album.taken).format('MMMM Do, YYYY')
      .small-1.columns
        a.button.tiny(href='/') All Albums
    .row
      form(action='/albums/'+album._id, method='post', enctype='multipart/form-data')#addPhoto
        fieldset
          legend New Photo
          .small-4.columns
            label(for='photo') Add Image File
          .small-4.columns
            input(name='photo', type='file')
          .small-4.columns
            button.expand.radius.tiny#submitFile Insert
    .row
      .small-12.columns
        each photo in album.photos
          .photo-box
            img(src=photo)

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

