doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Mongo Movie DB
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Mongo Movie DB
    .row
      .small-12.columns
        form#movie.hide
          fieldset
            .row
              .small-12.columns
                label Title
                  input#name(placeholder='Movie Title', name='name', autofocus)
            .row
              .small-4.columns
                label Rating
                  input(placeholder='Rating', name='rating' )
              .small-4.columns
                label Running Time
                  input(placeholder='Running Time', name='runtime')
              .small-4.columns
                label Release Year
                  input(placeholder='Release Year', name='year')
            .row
              .small-4.columns
                label Studio
                  input(placeholder='Studio', name='studio')
              .small-4.columns
                label Actors
                  input(placeholder='Actors', name='actors')
              .small-4.columns
                label Director
                  input(placeholder='Director', name='director')
            .row
              .small-12.columns
                label Poster URL
                  input(placeholder='Poster URL', name='poster')
            .row
              .small-2.small-offset-5.columns
                button#addMovie.alert Add Movie
                button#updateMovie.alert.hide Update Movie
    .row
      .small-2.small-offset-4.columns
        button#toggleForm Toggle Form
      .small-2.columns
        button#showAll Show All Movies
      .small-4.columns
    .row#movieRow

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')

